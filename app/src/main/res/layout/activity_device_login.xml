<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/label_title"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:text="Device Select" />

    <Spinner
        android:id="@+id/sp_login_device"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@+id/label_title"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10px" />

    <TextView
        android:id="@+id/tv_feature"
        android:layout_width="wrap_content"
        android:layout_height="60px"
        android:layout_below="@+id/sp_login_device"
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:text="Feature Select" />

    <Spinner
        android:id="@+id/sp_login_feature"
        android:layout_width="match_parent"
        android:layout_height="60px"
        android:layout_below="@+id/tv_feature"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:layout_marginTop="10px" />

    <RelativeLayout
        android:id="@+id/rl_check_in_option"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:layout_below="@+id/sp_login_feature"
        android:layout_marginTop="100px">

        <TextView
            android:id="@+id/tv_check_in_type"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:text="Check in type select" />

        <Spinner
            android:id="@+id/sp_login_check_in_type"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_below="@+id/tv_check_in_type"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px" />

        <TextView
            android:id="@+id/tv_check_in_point"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_below="@+id/sp_login_check_in_type"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:text="Check in point select" />

        <Spinner
            android:id="@+id/sp_login_check_in_point"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_below="@+id/tv_check_in_point"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_photo_option"
        android:layout_width="match_parent"
        android:layout_height="600px"
        android:layout_below="@+id/sp_login_feature"
        android:layout_marginTop="100px"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_photographer"
            android:layout_width="wrap_content"
            android:layout_height="60px"
            android:layout_marginTop="20px"
            android:layout_marginLeft="20px"
            android:text="Photographer Select" />

        <Spinner
            android:id="@+id/sp_photographer"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_below="@+id/tv_photographer"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:layout_marginTop="10px" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login_enter"
        android:layout_width="300px"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20px"
        android:text="Enter"
        android:textColor="@color/white"
        android:background="@color/slategrey"/>
</RelativeLayout>